<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      {{#if user.image}}
      <img src="{{user.image}}" width="300px" height="300px" style="border-radius: 3rem;"/>
      {{else}}
      <img src="https://via.placeholder.com/300" width="300px" height="300px" />
      {{/if}} 
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">
          {{user.email}}
        </p>
        <p class="card-text">
          <span class="text-info font-weight-bold">{{user.Comments.length}}</span>
          已評論餐廳
        </p>
        <p class="card-text">
          <span class="text-info font-weight-bold">{{user.FavoritedRestaurants.length}}</span>
          收藏的餐廳
        </p>
        <p class="card-text">
          <span class="text-info font-weight-bold">{{user.Followings.length}}</span>
          followings（追蹤者）
        </p>
        <p class="card-text">
          <span class="text-info font-weight-bold">{{user.Followers.length}} </span>
          followers（追隨者）
        </p>
        <p>
          {{#ifCond user.id currentUser.id }}
          <a href="/users/{{user.id}}/edit"><button type="submit" class="btn btn-primary">edit</button></a>
          {{else}}
          {{#if user.isFollowed}}
          <form action="/following/{{user.id}}?_method=DELETE" method="POST" style="display: contents;"><button type="submit"
                    class="btn btn-danger">取消追蹤</button></form>
          {{else}}
          <form action="/following/{{user.id}}" method="POST" style="display: contents;"><button type="submit"
                    class="btn btn-primary">追蹤</button></form>
          {{/if}}
          {{/ifCond}}

        </p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-4">
    <div class="card">
      <h6 class="card-header">
        <span class="text-info font-weight-bold">{{user.Followings.length}}</span>
         followings（追蹤者）
      </h6>
      <div class="card-body">
        {{#each user.Followings}}
        <a href="/users/{{this.id}}" style="display: inline-block;">
          <img src="{{this.image}}" class="mx-2" style="width: 5rem; height: 5rem; border-radius:50%;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card">
      <h6 class="card-header">
